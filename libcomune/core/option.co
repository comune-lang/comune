using core::libc::abort;

enum Option<type T> {
	Some { 
		T value;

		new(new& self, T value) {
			self = new Option<T>::Some { value };
		}
	},

	None,
}

impl<type T> Option<T> {
	fn unwrap(self) -> T {
		match self {
			Option<T>::Some { value } => {
				value
			}

			Option<T>::None _ => {
				abort()
			}
		}
	}
}