using core::mem::{forget, size_of, write};
using core::libc::{malloc, free};

struct Box<type T> {
	T raw* data;

	new(new& self, T t) {
		self.data = malloc(size_of<T>()) as T raw*;
		
		unsafe {
			write<T>(self.data, t);
		}
	}

	drop(mut& self) {
		free(self.data as void raw*);
	}
}

impl<type T> Box<T> {
	T raw* into_raw(self) {
		auto data = self.data;
		forget<Box<T>>(self);
		data
	}
}