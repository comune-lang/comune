using core::mem::{size_of, malloc, realloc, free};

struct Vector<type T> {
	T mut* data;
	usize len;
	usize capacity;

	// `new` and `drop` are special functions
	// that handle construction and destruction.

	// TODO: Add `new&` binding
	/*new(mut& self) {
		// TODO: guarantee move elision
		self = Vector<T> {
			data: malloc(0) as T mut*,
			len: 0,
			capacity: 0,
		};
	}
	*/
	drop(mut& self) {
		if self.capacity > 0 {
			free(self.data as void mut*);
		}
	}
}

using Test = Vector<int>;

void foo() {
	// God this could use some syntactic sugar lol
	usize size = size_of<Test>();
	Test mut* mut b = malloc(size) as Test mut*;
	
	unsafe {
		new (*b) Vector<int> {
			data: malloc(0) as int mut*,
			len: 0,
			capacity: 0
		}
	};
	
	unsafe {
		drop *b;
	}
}


