impl<type T> Vector<T> {

	void push(mut& self, T elem) {		
		if self.len >= self.capacity {
			self.realloc(
				if self.capacity == 0 { 
					self.capacity + 1 
				} else { 
					self.capacity * 2
				}
			)
		}
		
		unsafe {
			*(self.data + self.len) = elem
		}
		
		self.len += 1;
	}

	void realloc(mut& self, usize capacity) {		
		self.data = realloc(
				self.data as void mut*, 
				capacity * size_of<T>()
			) as T mut*;
		
		self.capacity = capacity;
	}

	T get(mut& self, usize i) {
		unsafe { *(self.data + i) }
	}

}

